{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="rating">Rating: 1-5</label>
          {{#x-select value=rating}}
            {{#x-option value=1}}1{{/x-option}}
            {{#x-option value=2}}2{{/x-option}}
            {{#x-option value=3}}3{{/x-option}}
            {{#x-option value=4}}4{{/x-option}}
            {{#x-option value=5}}5{{/x-option}}
          {{/x-select}}
        </div>

        <button {{action 'saveComment'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
