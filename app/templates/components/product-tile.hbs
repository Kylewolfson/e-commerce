<h1>{{model.title}}</h1>
<img src="{{model.image}}" alt="Image for {{model.title}}"/><br><br>
{{model.description}}<br><br>
{{model.cost}}

<ul>
{{#each sortedComments as |comment|}}
  <li>{{comment.name}} {{moment-format comment.date 'MMMM Do YYYY, h:mm a'}} {{comment.rating}}<br>{{comment.body}}</li>
{{/each}}
</ul>

{{new-comment product=model saveComment="saveComment"}}

<button {{action 'addToCart' model}}>Add to Cart</button>
